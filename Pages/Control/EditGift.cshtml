@page
@model razor_secret_santa.Pages.Control.EditGiftModel
@{
	ViewData["Title"] = "Тайный Санта";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height:80vh; overflow:hidden;">
	<div class="home-container">

		<h1 class="text-center">Редактировать подарок</h1>

		<form class="p-2" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-floating p-2">
				<input asp-for="gift!.name" value="@Model.gift!.name" class="form-control" aria-required="true" />
				<label asp-for="gift!.name" class="form-label"></label>
				<span asp-validation-for="gift!.name" class="text-danger"></span>
			</div>
			<div class="d-flex justify-content-center align-items-center">
				<a class="m-2 w-50 btn btn-lg btn-secondary" asp-page="/Control">Назад</a>
				<button type="submit" class="m-2 w-50  btn btn-lg btn-success">Сохранить</button>
			</div>
		</form>

	</div>
</div>